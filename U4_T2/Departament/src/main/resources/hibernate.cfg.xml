<?xml version="1.0" encoding="UTF-8"?>
<hibernate-configuration>
	<session-factory>
		<property name="connection.driver_class">org.mariadb.jdbc.Driver</property>
		<property name="connection.url">jdbc:mariadb://localhost:3336/productos?createDatabaseIfNotExists=true
		</property>
		<property name="connection.username">root</property>
		<property name="connection.password">root</property>
		<property name="dialect">org.hibernate.dialect.MariaDB103Dialect</property>
		<property name="hibernate.show_sql">true</property>
		<property name="show_sql">false</property>
		<property name="hbm2ddl.auto">create</property>
		<property name="hibernate.current_session_context_class">thread</property>
		<property name="connection.pool_size">100</property>
		<mapping class="pruebas.model.Producto" />
	</session-factory>
</hibernate-configuration>